<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="300" fill="url(#heroGradient)"/>
  
  <!-- Gaming setup illustration -->
  <rect x="80" y="120" width="240" height="120" fill="white" opacity="0.1" rx="10"/>
  <rect x="100" y="140" width="200" height="80" fill="white" opacity="0.2" rx="8"/>
  
  <!-- Monitor -->
  <rect x="150" y="100" width="80" height="50" fill="white" opacity="0.3" rx="5"/>
  <rect x="155" y="105" width="70" height="40" fill="#2c3e50" opacity="0.8" rx="3"/>
  
  <!-- Controller -->
  <ellipse cx="120" cy="200" rx="25" ry="15" fill="white" opacity="0.3"/>
  <ellipse cx="280" cy="200" rx="25" ry="15" fill="white" opacity="0.3"/>
  
  <!-- Keyboard -->
  <rect x="180" y="180" width="120" height="20" fill="white" opacity="0.2" rx="3"/>
  
  <!-- Gaming elements -->
  <circle cx="100" cy="80" r="8" fill="#ffd700" opacity="0.7"/>
  <circle cx="320" cy="70" r="6" fill="#ff6b6b" opacity="0.7"/>
  <circle cx="350" cy="150" r="10" fill="#4ecdc4" opacity="0.6"/>
  
  <text x="200" y="280" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="16" opacity="0.9">Gaming Setup</text>
</svg>
